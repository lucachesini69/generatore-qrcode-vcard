<Window x:Class="VCardQRGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generatore QR Code vCard" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Pannello sinistro: Input dati -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Dati Contatto" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

                <TextBlock Text="Nome *" FontWeight="SemiBold"/>
                <TextBox x:Name="FirstNameTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Cognome *" FontWeight="SemiBold"/>
                <TextBox x:Name="LastNameTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Azienda" FontWeight="SemiBold"/>
                <TextBox x:Name="OrganizationTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Titolo/Ruolo" FontWeight="SemiBold"/>
                <TextBox x:Name="TitleTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Email" FontWeight="SemiBold"/>
                <TextBox x:Name="EmailTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Telefono Fisso" FontWeight="SemiBold"/>
                <TextBox x:Name="PhoneTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Cellulare" FontWeight="SemiBold"/>
                <TextBox x:Name="MobileTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Indirizzo" FontWeight="SemiBold"/>
                <TextBox x:Name="AddressTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Città" FontWeight="SemiBold"/>
                <TextBox x:Name="CityTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="CAP" FontWeight="SemiBold"/>
                <TextBox x:Name="ZipCodeTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Provincia/Stato" FontWeight="SemiBold"/>
                <TextBox x:Name="StateTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Nazione" FontWeight="SemiBold"/>
                <TextBox x:Name="CountryTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Sito Web" FontWeight="SemiBold"/>
                <TextBox x:Name="WebsiteTextBox" Margin="0,5,0,10" Padding="5"/>

                <TextBlock Text="Note" FontWeight="SemiBold"/>
                <TextBox x:Name="NotesTextBox" Margin="0,5,0,10" Padding="5"
                         TextWrapping="Wrap" AcceptsReturn="True"
                         MinHeight="60" MaxHeight="120"
                         VerticalScrollBarVisibility="Auto"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="GenerateButton" Content="Genera QR Code" 
                            Click="GenerateButton_Click" Padding="20,10" 
                            Margin="5" FontSize="14" FontWeight="Bold"/>
                    <Button x:Name="SaveButton" Content="Salva Immagine" 
                            Click="SaveButton_Click" Padding="20,10" 
                            Margin="5" FontSize="14"/>
                    <Button x:Name="ClearButton" Content="Pulisci" 
                            Click="ClearButton_Click" Padding="20,10" 
                            Margin="5" FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Pannello destro: QR Code e vCard -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="QR Code Generato" 
                       FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" 
                    Background="White" Margin="0,0,0,10">
                <Image x:Name="QRCodeImage" Stretch="Uniform" Margin="10"/>
            </Border>

            <TextBlock Grid.Row="2" Text="Contenuto vCard" 
                       FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

            <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" 
                    Background="White" Margin="0,0,0,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="VCardTextBox" TextWrapping="Wrap" 
                             BorderThickness="0" IsReadOnly="True" 
                             Background="Transparent" Padding="10"/>
                </ScrollViewer>
            </Border>

            <TextBlock Grid.Row="4" x:Name="StatusTextBlock" Text="Pronto" 
                       FontStyle="Italic" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>